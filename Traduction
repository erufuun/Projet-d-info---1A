# Transformer une liste de mots (chaine) en une phrase (chaine de caracteres)
def liste_to_char (liste) :
        ch = ""
        for X in liste :
                if (X != ",") and (X != ".") and (X != "’") : 
                        ch += " " + X 
                else :
                        ch += X
        if (len(ch) > 0) : 
                ch = ch[1:] # Enlever le premier espace
        return ch

